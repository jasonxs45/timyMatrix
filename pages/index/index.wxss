/**index.wxss**/
.entry{
	-webkit-box-shadow:0 0 20rpx 0 rgba(0,0,0,.2);
	        box-shadow:0 0 20rpx 0 rgba(0,0,0,.2);
	-webkit-box-pack: center;
	box-pack: center;
	-webkit-box-align: center;
	box-align: center;
	border-radius:4px;
	display:-webkit-box;
	padding:40rpx 20rpx;
	margin:40rpx 20rpx;
	position:relative;
}
.icon{
	display:block;
	width:160rpx;
	height:160rpx;
	border-radius:50%;
	margin-right:30rpx;
}
.content{
	-webkit-box-flex:1;
	margin-right:50rpx;
}
.title,.desc{
	display:block;
}
.title{
	font-size:40rpx;
}
.desc{
	font-size:28rpx;
	font-weight: 200;
	line-height:1.7;
	margin-top:16rpx;
}
.right-arrow{
	width:40rpx;
	height:40rpx;
}
.bindTel{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background:#fff;
  z-index:99;
}
.tip{
  display: block;
  width:500rpx;
  margin:400rpx auto 50rpx;
  text-align: center;
  line-height:1.7
}
.bind{
  width:500rpx;
  font-size:36rpx;
}