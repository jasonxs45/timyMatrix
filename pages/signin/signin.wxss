page {
  background: #eee;
}

.title {
  font-size: 36rpx;
  text-align: center;
  padding-top: 40rpx;
  color: #888;
}

.time {
  color: #fa787a;
  text-align: center;
  font-size: 100rpx;
  padding-top: 40rpx;
  font-weight: 600;
}

.distance {
  text-align: center;
  padding: 20rpx;
  font-size: 36rpx;
  color: #888;
}

.distance .num {
  color: #fa787a;
  font-weight: 500;
}

.locate {
  text-align: center;
  font-size: 32rpx;
  color: #888;
}

.locate .relocate {
  color: #fa787a;
  font-weight: 500;
}

.tap-area {
  width: 444rpx;
  height: 444rpx;
  background: #fff;
  margin: 80rpx auto;
  border-radius: 50%;
  box-shadow: 1px 1px 2px 0 rgba(0, 0, 0, 0.2);
  padding: 20rpx;
}

.tap-area::after {
  border: none;
}

.tap-area.button-hover, .tap-area.button-hover .inner {
  box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.2);
}

.tap-area .inner {
  width: 360rpx;
  height: 360rpx;
  background: #fff;
  margin: 22rpx auto;
  border-radius: 50%;
  box-shadow: 1px 1px 2px 0 rgba(0, 0, 0, 0.2);
  color: #888;
}

.tap-area .inner::after {
  border: none;
}

.tap-area .inner text {
  font-size: 32rpx;
  display: block;
  padding: 60rpx 0 40rpx;
}

.finger {
  width: 130rpx;
  height: 170rpx;
}

.btns {
  padding: 50rpx;
  position: relative;
}

.btns::after {
  content: '';
  display: block;
  clear: both;
}

.btns .btn {
  color: #fff;
  display: inline-block;
  padding: 30rpx 60rpx;
  font-size: 36rpx;
  border-radius: 4px;
}

.showRule {
  background: #fa787a;
  box-shadow: 0 0 4px 0 #fa787a;
}

.showRecords {
  background: #aaa;
  box-shadow: 0 0 4px 0 #aaa;
}

.rules {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  -webkit-backdrop-filter: blur(5px);
  backdrop-filter: blur(5px);
  z-index: 999;
  padding: 40rpx;
  transition: all .2s;
  -webkit-transition: all .2s;
  transform:translate(0,100%);
  -webkit-transform:translate(0,100%);
}
.rules.showing{
  transform:translate(0,0);
  -webkit-transform:translate(0,0);
}

.rules rich-text {
  display: block;
  height: calc(100% - 30px);
}

.rule-wrapper {
  width: 100%;
}

.rule-title {
  color: #fff;
  text-align: center;
}

.rule-item {
  color: #fff;
  line-height: 1.7;
  font-weight: 200;
  font-size: 36rpx;
  margin: 20rpx 0;
}
.rules .close{
  position: relative;
  left: 50%;
  margin-left:-15px;
}